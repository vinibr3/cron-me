<div class='container-fluid'>
  <div class='row'>
    <div class='col'></div>
    <div class='col-4'>
      <h2><%= t('.title') %></h2>
      <%= form_with model: @user, class: 'form-horizontal', local: true do |f| %>
        <div class='form-group'>
          <%= f.label :email %>
          <div class=''>
            <%= f.email_field :email %>
          </div>
        </div>
        <div class='form-group'>
          <%= f.label :password %>
          <div class=''>
            <%= f.password_field :password %>
          </div>
        </div>
        <div class='form-group'>
          <%= f.label :password_confirmation %>
          <div class=''>
            <%= f.password_field :password_confirmation %>
          </div>
        </div>
        <div class='form-group'>
           <%= f.submit %>
        </div>
      <% end %>
    </div>
    <div class='col'></div>
  </div>
</div>
