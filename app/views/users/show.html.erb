<div class='container-fluid'>
  <div class='row'>
    <div class='col'></div>
    <div class='col-4'>
      <h2><%= t('.title') %></h2>
      <%= form_with model: @user, class: 'form-horizontal', local: true do |f| %>
        <div class='form-group'>
          <%= f.label :email %>
          <div class=''>
            <%= f.object.email %>
          </div>
        </div>
        <div class='form-group'>
          <%= f.label :name %>
          <div class=''>
            <%= f.object.name %>
          </div>
        </div>
        <div class='form-group'>
          <%= f.label :active %>
          <div class=''>
            <%= t(f.object.active.to_s) %>
          </div>
        </div>
      <% end %>
    </div>
    <div class='col'></div>
  </div>
</div>
