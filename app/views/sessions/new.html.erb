<div class='container-fluid'>
  <div class='row'>
    <div class='col'></div>
    <div class='col-2'>
      <h2><%= t('.title') %></h2>
      <%= form_with model: @user, local: true , url: sessions_path do |f| %>
        <div class='form-group'>
          <%= f.label :email %>
          <div class=''>
            <%= f.email_field :email %>
          </div>
        </div>
        <div class='form-group'>
          <%= f.label :password %>
          <div class=''>
            <%= f.password_field :password %>
          </div>
        </div>
        <div class='form-group'>
           <%= f.submit t('.button_login_label'), { class: 'btn btn-success' } %>
        </div>
        <div class='form-group'>
           <%= link_to t('sessions.new.user'), new_user_path %>
        </div>
      <% end %>
    </div>
    <div class='col'></div>
  </div>
</div>
