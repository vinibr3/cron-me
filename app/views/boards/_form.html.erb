<%= form_with model: @board, class: 'form-horizontal', local: true do |f| %>
  <div class='form-group'>
    <%= f.label :title %>
    <div class=''>
      <%= f.text_field :title, required: true %>
    </div>
  </div>
  <div class='form-group'>
    <%= f.label :description %>
    <div class=''>
      <%= f.text_area :description %>
    </div>
  </div>
  <div class='form-group'>
    <%= f.label :priority %>
    <div class=''>
      <%= f.number_field :priority %>
    </div>
  </div>
  <div class='form-group'>
    <%= f.label :header_background_color %>
    <div class=''>
      <%= f.color_field :header_background_color %>
    </div>
  </div>
  <div class='form-group'>
    <%= f.label :header_text_color %>
    <div class=''>
      <%= f.color_field :header_text_color %>
    </div>
  </div>
  <div class='form-group'>
    <div class=''>
      <%= f.submit class: 'btn btn-success' %>
    </div>
  </div>
<% end %>
