<div class='container-fluid'>
  <div class='row'>
    <div class='col'></div>
    <div class='col-2'>
      <h2><%= t('.title') %></h2>
      <ul class='text-danger'>
        <% @board.errors.full_messages.each do |message| %>
          <li> <%= message %> </li>
        <% end %>
      </ul>
      <%= form_with model: @board, class: 'form-horizontal', local: true do |f| %>
        <div class='form-group'>
          <%= f.label :title %>
          <div class=''>
            <%= f.text_field :title, required: true %>
          </div>
        </div>
        <div class='form-group'>
          <%= f.label :description %>
          <div class=''>
            <%= f.text_area :description %>
          </div>
        </div>
        <div class='form-group'>
          <%= f.label :priority %>
          <div class=''>
            <%= f.number_field :priority %>
          </div>
        </div>
        <div class='form-group'>
          <%= f.label :color %>
          <div class=''>
            <%= f.color_field :color %>
          </div>
        </div>
        <div class='form-group'>
          <div class=''>
            <%= f.submit class: 'btn btn-success' %>
          </div>
        </div>
      <% end %>
    </div>
    <div class='col'></div>
  </div>
</div>
