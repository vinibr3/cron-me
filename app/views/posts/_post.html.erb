<div class="card border-secondary mb-3" style="max-width: 18rem;" id='<%= post.id %>'>
  <div class="card-header">
    <%= post.title %>
    <div class='float-right'>
      <%= render partial: 'post_labels/form', locals: { post: post } %>
    </div>
  </div>
  <div class="card-body text-secondary">
    <%= link_to t('boards.index.edit'), edit_board_post_path(post.board, post) %>
    <%= link_to t('posts.destroy'),
                board_post_path(post.board, post),
                method: :delete,
                remote: true,
                data: { confirm: t('posts.confirm_destroy') },
                class: 'float-right' %>
    <h5 class="card-title"><%= post.description %></h5>
    <div>
      <%= render partial: 'posts/attachments', locals: { post: post, size: '100x100' } %>
    </div>
    <%= render partial: 'post_labels/index', locals: { post: post } %>
    <p class="card-text float-right"><%= post.conclusion_deadline.strftime("%d/%m/%Y %H:%M") %></p>
  </div>
</div>
